<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:background="@color/background_dark"
                android:elevation="4dp">

                <!-- App Icon and Title -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/app_icon_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ðŸ„"
                            android:textSize="24sp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/app_name"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <!-- History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistory"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconTint="@color/primary"
                    app:backgroundTint="#1A2b8cee"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <!-- Image Display Area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <!-- Main Image -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="16dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Cattle image"
                        android:background="@color/surface_dark" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Scanning Frame Overlay -->
                <FrameLayout
                    android:id="@+id/scanningOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="48dp"
                    android:background="@drawable/scanning_frame"
                    android:visibility="visible">

                    <!-- Corner Brackets -->
                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|start"
                        android:background="@drawable/corner_brackets" />

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/corner_brackets" />

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|start"
                        android:background="@drawable/corner_brackets" />

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/corner_brackets" />
                </FrameLayout>
            </FrameLayout>

            <!-- Result Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A2b8cee"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Breed Name -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SubheaderText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/identification_result"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvBreedName"
                                style="@style/HeaderText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_breed" />
                        </LinearLayout>

                        <!-- Confidence Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:background="@drawable/confidence_badge_bg">

                            <TextView
                                android:id="@+id/tvConfidence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_confidence"
                                android:textSize="18sp"
                                android:textColor="@color/success"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ“"
                                android:textSize="14sp"
                                android:textColor="@color/success" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/confidenceProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="94"
                        android:max="100"
                        android:progressTint="@color/success"
                        android:progressBackgroundTint="@color/surface_dark"
                        android:layout_marginBottom="24dp" />

                    <!-- Metrics Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Inference Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/metric_card_bg"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš¡"
                                android:textSize="18sp"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/MetricLabelText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/inference_label" />

                                <TextView
                                    android:id="@+id/tvInferenceTime"
                                    style="@style/MetricValueText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/default_inference_time" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Model Name -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/metric_card_bg"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ§ "
                                android:textSize="18sp"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/MetricLabelText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/model_label" />

                                <TextView
                                    android:id="@+id/tvModelName"
                                    style="@style/MetricValueText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/model_name" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Facts Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A2b8cee"
                app:cardBackgroundColor="@color/card_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â„¹ï¸"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quick_facts_title"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_dark"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>

                    <!-- Facts Content -->
                    <TextView
                        android:id="@+id/tvQuickFacts"
                        style="@style/BodyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/holstein_facts" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="96dp" />

            <!-- Footer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/powered_by"
                android:textSize="10sp"
                android:textColor="@color/text_secondary_dark"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.2"
                android:gravity="center"
                android:alpha="0.6"
                android:paddingVertical="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:fabSize="normal"
        app:elevation="12dp"
        app:backgroundTint="@color/primary"
        app:tint="@color/white"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="@string/take_photo" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
